<div class="row">
  <div class="col-md-6 col-md-offset-3 col-sm-8 col-sm-offset-2 col-xs-12">
    <div class="text-center">
      <%= form_for(@site, remote: true) do |f| %>
        <% if @site.errors.any? %>
          <div id="error_explanation">
            <h2><%= pluralize(@site.errors.count, "error") %> prohibited this url from being created:</h2>

            <ul>
            <% @site.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
            </ul>
          </div>
        <% end %>

        <h3>shorten your link here</h3>
        <div class="form-group">
          <%= f.text_field :original_url, class: "form-control" %>
        </div>
        <%= f.submit "gimme that link!", class: "btn btn-primary"  %>
      <% end %>
    </div>
  </div>
</div>